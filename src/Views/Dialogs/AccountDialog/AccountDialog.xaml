<UserControl x:Class="AccountManager.Views.Dialogs.AccountDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:AccountManager.Utilities.Helpers"
             Background="Transparent">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="490" MaxWidth="490" MaxHeight="800"
            Background="{DynamicResource MainBackgroundColor}">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="{Binding Title}" 
                        FontSize="24" 
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,8"/>
                
                <TextBlock Text="{Binding Subtitle}" 
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondaryColor}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,0"/>
            </StackPanel>

            <!-- Account Name with Avatar Preview -->
            <StackPanel Grid.Row="1" Margin="0,0,0,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Avatar Preview -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource PrimaryColor}"
                            Width="46" Height="46"
                            CornerRadius="11"
                            Margin="0,0,12,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="{Binding Account.Name, Converter={StaticResource FirstLetterConverter}, FallbackValue=A}" 
                                Foreground="White"
                                FontSize="18" 
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                UseLayoutRounding="True"
                                TextOptions.TextFormattingMode="Display"
                                TextOptions.TextRenderingMode="ClearType"/>
                    </Border>

                    <!-- Name Input -->
                    <TextBox Grid.Column="1" 
                            Text="{Binding Account.Name, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource AdvancedTextBox}"
                            helpers:TextBoxHelper.Label="Account Name"
                            helpers:TextBoxHelper.MaxChars="50"
                            helpers:TextBoxHelper.Placeholder="Enter account name..." 
                            helpers:TextBoxHelper.Required="True"/>
                </Grid>
            </StackPanel>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                          Style="{StaticResource ModernScrollViewer}">
                <StackPanel Margin="0,8,0,0">

                    <!-- Website -->
                    <TextBox Style="{StaticResource AdvancedTextBox}"
                           Text="{Binding Account.Website, UpdateSourceTrigger=PropertyChanged}"
                           helpers:TextBoxHelper.Label="Website"
                           helpers:TextBoxHelper.Placeholder="example.com or https://example.com"
                           Margin="0,0,0,24"/>

                    <!-- Username and Email in two columns -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                               Style="{StaticResource AdvancedTextBox}"
                               Text="{Binding Account.Username, UpdateSourceTrigger=PropertyChanged}"
                               helpers:TextBoxHelper.Label="Username"
                               helpers:TextBoxHelper.Placeholder="Enter username"/>
                        
                        <TextBox Grid.Column="2"
                               Style="{StaticResource AdvancedTextBox}"
                               Text="{Binding Account.Email, UpdateSourceTrigger=PropertyChanged}"
                               helpers:TextBoxHelper.Label="Email Address"
                               helpers:TextBoxHelper.Placeholder="user@example.com"/>
                    </Grid>

                    <!-- Password with Generator -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                               Style="{StaticResource AdvancedTextBox}"
                               Text="{Binding Account.Password, UpdateSourceTrigger=PropertyChanged}"
                               helpers:TextBoxHelper.Label="Password"
                               helpers:TextBoxHelper.Placeholder="Enter password"
                               helpers:TextBoxHelper.Required="True"/>
                        
                        <Button Grid.Column="1" 
                              Command="{Binding GeneratePasswordCommand}"
                              Margin="12,-5,0,0"
                              Width="42" Height="42"
                              Background="{StaticResource PrimaryColor}"
                              BorderThickness="0"
                              ToolTip="Generate Secure Password">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="11">
                                        <materialDesign:PackIcon Kind="KeyVariant" 
                                                               Foreground="White"
                                                               Width="20" Height="20"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#8486fdff"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Notes -->
                    <TextBox Style="{StaticResource AdvancedTextBox}"
                           Text="{Binding Account.Notes, UpdateSourceTrigger=PropertyChanged}"
                           helpers:TextBoxHelper.Label="Notes"
                           helpers:TextBoxHelper.Placeholder="Additional notes or details..."
                           AcceptsReturn="True"
                           TextWrapping="Wrap"
                           Height="120"
                           VerticalScrollBarVisibility="Auto"
                           Margin="0,0,0,24"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Actions -->
            <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,24,0,0">
                <Button Content="Cancel" 
                      Style="{StaticResource SecondaryButton}"
                      MinWidth="100"
                      Margin="0,0,16,0"/>
                
                <Button Content="{Binding ActionButtonText}" 
                      Style="{StaticResource PrimaryButton}"
                      MinWidth="100"
                      IsEnabled="{Binding CanSave}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>