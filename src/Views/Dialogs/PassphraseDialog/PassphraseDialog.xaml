<UserControl x:Class="AccountManager.Views.Dialogs.PassphraseDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="400" MaxWidth="500"
            Background="{DynamicResource MainBackgroundColor}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="#6366F1" 
                            Width="48" Height="48" 
                            CornerRadius="24">
                        <materialDesign:PackIcon Kind="LockOutline" 
                                            Foreground="White"
                                            Width="24" Height="24"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="{Binding Title}" 
                        FontSize="20" 
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        HorizontalAlignment="Center"
                        Margin="0,12,0,0"/>
                
                <TextBlock Text="{Binding Message}" 
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondaryColor}"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Passphrase Input -->
            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                <PasswordBox Name="PassphraseBox"
                           Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                           materialDesign:HintAssist.Hint="Passphrase"
                           FontSize="14"
                           PasswordChanged="OnPasswordChanged"/>
            </StackPanel>

            <!-- Confirm Passphrase Input (only for new encryption) -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16"
                       Visibility="{Binding ShowConfirmation, Converter={StaticResource BooleanToVisibilityConverter}}">
                <PasswordBox Name="ConfirmPassphraseBox"
                           Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                           materialDesign:HintAssist.Hint="Confirm Passphrase"
                           FontSize="14"
                           PasswordChanged="OnConfirmPasswordChanged"/>
            </StackPanel>

            <!-- Validation Error -->
            <StackPanel Grid.Row="3" Margin="0,0,0,16"
                       Visibility="{Binding HasValidationError, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Background="#FEECEE" 
                        BorderBrush="#F87171" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlertCircleOutline" 
                                               Foreground="#EF4444" 
                                               Width="16" Height="16" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ValidationError}" 
                                 Foreground="#EF4444" 
                                 FontSize="12" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
                <Button Content="Cancel" 
                      Style="{StaticResource SecondaryButton}"
                      Command="{Binding CancelCommand}"
                      Margin="0,0,16,0"
                      MinWidth="100"/>
                <Button Content="Continue" 
                      Style="{StaticResource PrimaryButton}"
                      Command="{Binding ConfirmCommand}"
                      IsEnabled="{Binding CanConfirm}"
                      MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>