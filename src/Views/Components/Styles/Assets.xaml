<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Asset Image Sources with High Quality Rendering -->
    <BitmapImage x:Key="LogoLightSource"
                 UriSource="pack://application:,,,/src/Assets/logo-light.png"
                 RenderOptions.BitmapScalingMode="HighQuality"/>
    <BitmapImage x:Key="LogoDarkSource"
                 UriSource="pack://application:,,,/src/Assets/logo-dark.png"
                 RenderOptions.BitmapScalingMode="HighQuality"/>
    <BitmapImage x:Key="LogoDefaultSource"
                 UriSource="pack://application:,,,/src/Assets/logo.png"
                 RenderOptions.BitmapScalingMode="HighQuality"/>
    
</ResourceDictionary>