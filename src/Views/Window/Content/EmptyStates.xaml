<UserControl x:Class="AccountManager.Views.Window.Content.EmptyStates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <!-- No Accounts Empty State - handles both selected groups and app startup -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <!-- Show when no accounts in selected group/system group -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding DisplayedAccounts.Count}" Value="0"/>
                                <Condition Binding="{Binding IsAccountsPanelVisible}" Value="True"/>
                                <Condition Binding="{Binding IsNoGroupsStateVisible}" Value="False"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible"/>
                        </MultiDataTrigger>
                        <!-- Show when app starts with groups but no group selected -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsEmptyStateVisible}" Value="True"/>
                                <Condition Binding="{Binding IsNoGroupsStateVisible}" Value="False"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <Border Background="{DynamicResource SidebarColor}" 
                    Width="120" Height="120" 
                    CornerRadius="60"
                    HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="{Binding EmptyStateIcon}" 
                                        Width="60" Height="60" 
                                        Foreground="{DynamicResource SidebarTextSecondaryColor}"
                                        Opacity="0.5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="{Binding EmptyStateTitle}" 
                       FontSize="19" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource SidebarTextSecondaryColor}"
                       HorizontalAlignment="Center"
                       LineHeight="22"
                       Margin="0,20,0,6"/>
            <TextBlock Text="{Binding EmptyStateMessage}" 
                       FontSize="12"
                       FontWeight="Regular"
                       Foreground="{DynamicResource SidebarTextSecondaryColor}"
                       Opacity="0.7"
                       HorizontalAlignment="Center"/>
                       
            <!-- Add Account Button - Only for regular groups -->
            <Button Command="{Binding AddAccountCommand}"
                    Margin="0,24,0,0"
                    Height="40"
                    MinWidth="140"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <!-- Only show for regular groups (when CanAddAccount is true) -->
                            <DataTrigger Binding="{Binding CanAddAccount}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Plus" 
                                            Width="16" Height="16"
                                            Foreground="White"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"/>
                    <TextBlock Text="Add Account"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>


        <!-- No Groups Exist -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding IsNoGroupsStateVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <Border Background="{DynamicResource SidebarColor}" 
                    Width="120" Height="120" 
                    CornerRadius="60"
                    HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="FolderPlus" 
                                        Width="60" Height="60" 
                                        Foreground="{DynamicResource SidebarTextSecondaryColor}"
                                        Opacity="0.5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="Create your first group" 
                       FontSize="19" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource SidebarTextSecondaryColor}"
                       HorizontalAlignment="Center"
                       LineHeight="22"
                       Margin="0,20,0,6"/>
            <TextBlock Text="Groups help you organize your accounts by category" 
                       FontSize="12"
                       FontWeight="Regular"
                       Foreground="{DynamicResource SidebarTextSecondaryColor}"
                       Opacity="0.7"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
                       
            <!-- Get Started Button -->
            <Button Command="{Binding SidebarViewModel.AddGroupCommand}"
                    Margin="0,24,0,0"
                    Height="40"
                    MinWidth="140"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Plus" 
                                            Width="16" Height="16"
                                            Foreground="White"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"/>
                    <TextBlock Text="Get Started"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>

</UserControl>