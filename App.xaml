<Application x:Class="AccountManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Asset Resources (Load First) -->
                <ResourceDictionary Source="src/Views/Components/Styles/Assets.xaml"/>
                
                <!-- Theme Resources with Colors and Converters -->
                <ResourceDictionary Source="src/Views/Components/Styles/Themes.xaml"/>
                
                <!-- Application Styles -->
                <ResourceDictionary Source="src/Views/Components/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="src/Views/Components/Styles/ScrollBars.xaml"/>
                <ResourceDictionary Source="src/Views/Components/Styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="src/Views/Components/Styles/Windows.xaml"/>
                <ResourceDictionary Source="src/Views/Components/Styles/Panels.xaml"/>
                <ResourceDictionary Source="src/Views/Components/Styles/AccountCard.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>