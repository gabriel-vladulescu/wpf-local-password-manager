<UserControl x:Class="AccountManager.Views.Components.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="SourceElement">

    <UserControl.Resources>
        <Style x:Key="ColorSelectionItemStyle" TargetType="ListBoxItem">
            <Setter Property="Width" Value="39"/>
            <Setter Property="Height" Value="39"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <!-- Outer Border (Selection Ring) -->
                            <Border x:Name="SelectionRing"
                                    Width="39" Height="39"
                                    CornerRadius="19"
                                    BorderThickness="2"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            
                            <!-- Inner Color Circle -->
                            <Border x:Name="ColorCircle"
                                    Width="28" Height="28"
                                    CornerRadius="16"
                                    Background="{Binding Value}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                    Opacity="0.1" 
                                                    ShadowDepth="1" 
                                                    BlurRadius="3"/>
                                </Border.Effect>
                            </Border>

                            <!-- Content (not needed for colors but keeping for consistency) -->
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              Visibility="Collapsed"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SelectionRing" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SelectionRing" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="SelectionRing" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Color Picker Container -->
    <StackPanel>
        <ListBox ItemsSource="{Binding Colors, ElementName=SourceElement}"
                 SelectedValuePath="Value"
                 SelectedValue="{Binding SelectedColor, ElementName=SourceElement, Mode=TwoWay}"
                 ItemContainerStyle="{StaticResource ColorSelectionItemStyle}"
                 HorizontalAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 BorderThickness="0">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="10" Rows="1"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Empty template since color is shown via Background binding in the style -->
                    <Border Width="0" Height="0"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>

</UserControl>