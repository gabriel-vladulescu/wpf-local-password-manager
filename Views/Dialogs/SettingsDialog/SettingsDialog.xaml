<UserControl x:Class="AccountManager.Views.Dialogs.SettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="500" MaxWidth="500" MaxHeight="600"
            Background="{DynamicResource CardBackgroundColor}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="#6366F1" 
                        Width="48" Height="48" 
                        CornerRadius="24">
                        <materialDesign:PackIcon Kind="Cog" 
                                            Foreground="White"
                                            Width="24" Height="24"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="Settings" 
                        FontSize="20" 
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        HorizontalAlignment="Center"
                        Margin="0,12,0,0"/>
                
                <TextBlock Text="Configure your application preferences" 
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondaryColor}"
                        HorizontalAlignment="Center"
                        Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Settings Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"
                Style="{StaticResource ModernScrollViewer}">
                <StackPanel>
                    
                    <!-- Privacy Section -->
                    <TextBlock Text="Privacy &amp; Security" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryColor}"
                             Margin="0,0,0,12"/>
                    
                    <!-- Censor Account Data Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Hide Account Data" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Show username/email as ****** on cards" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding CensorAccountData}"/>
                    </Grid>
                    
                    <!-- Censor Password Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Hide Passwords" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Show passwords as ****** on cards" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding CensorPassword}"/>
                    </Grid>
                    
                    <!-- Enable Encryption Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Enable Encryption" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Encrypt accounts.json file with AES-256" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding EnableEncryption}"/>
                    </Grid>

                    <!-- Data Management Section -->
                    <TextBlock Text="Data Management" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryColor}"
                             Margin="0,20,0,12"/>
                    
                    <!-- Enable Trash Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Enable Trash" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Move deleted accounts to trash instead of permanent deletion" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding EnableTrash}"/>
                    </Grid>
                    
                    <!-- Enable Archive Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Enable Archive" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Archive accounts to hide them from main view" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding EnableArchive}"/>
                    </Grid>
                    
                    <!-- Auto Empty Trash Toggle (only visible if trash is enabled) -->
                    <Grid Margin="0,0,0,16" Visibility="{Binding EnableTrash, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Auto Empty Trash" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="{Binding TrashRetentionDays, StringFormat=Automatically delete items after {0} days}" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding AutoEmptyTrash}"/>
                    </Grid>
                    
                    <!-- Trash Retention Days (only visible if auto empty is enabled) -->
                    <Grid Margin="0,0,0,16" Visibility="{Binding ShowTrashRetention, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Retention Period" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Days to keep items in trash" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <TextBox Grid.Column="1"
                               Text="{Binding TrashRetentionDays}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               materialDesign:HintAssist.Hint="Days"
                               VerticalAlignment="Center"/>
                    </Grid>

                    <!-- UI Section -->
                    <TextBlock Text="User Interface" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryColor}"
                             Margin="0,20,0,12"/>
                    
                    <!-- Enable Local Search Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Enable Group Search" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Show search bar when viewing groups" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding EnableLocalSearch}"/>
                    </Grid>
                    
                    <!-- Confirmation Section -->
                    <TextBlock Text="Confirmations" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryColor}"
                             Margin="0,20,0,12"/>
                    
                    <!-- Confirm Account Delete Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Confirm Account Deletion" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Show confirmation dialog when deleting accounts" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding ConfirmAccountDelete}"/>
                    </Grid>
                    
                    <!-- Confirm Group Delete Toggle -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Confirm Group Deletion" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextPrimaryColor}"
                                     FontSize="14"/>
                            <TextBlock Text="Show confirmation dialog when deleting groups" 
                                     Foreground="{DynamicResource TextSecondaryColor}"
                                     FontSize="12"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <ToggleButton Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    IsChecked="{Binding ConfirmGroupDelete}"/>
                    </Grid>
                    
                </StackPanel>
            </ScrollViewer>

            <!-- Actions -->
            <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
                <Button Content="Reset to Defaults" 
                      Style="{StaticResource SecondaryButton}"
                      Command="{Binding ResetToDefaultsCommand}"
                      Margin="0,0,16,0"/>
                <Button Content="Close" 
                      Style="{StaticResource PrimaryButton}"
                      Command="{Binding CloseCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>