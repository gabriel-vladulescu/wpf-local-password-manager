<UserControl x:Class="AccountManager.Views.Dialogs.GroupDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="400" MaxWidth="450" MaxHeight="400"
            Background="{DynamicResource CardBackgroundColor}">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="#6366F1" 
                           Width="56" Height="56" 
                           CornerRadius="28">
                        <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                               Foreground="White"
                                               Width="28" Height="28"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="{Binding Title}" 
                         FontSize="28" 
                         FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryColor}"
                         HorizontalAlignment="Center"
                         Margin="0,16,0,0"/>
                
                <TextBlock Text="{Binding Subtitle}" 
                         FontSize="16"
                         Foreground="{DynamicResource TextSecondaryColor}"
                         HorizontalAlignment="Center"
                         Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Group Name *" 
                         Foreground="{DynamicResource TextPrimaryColor}" 
                         FontWeight="SemiBold"
                         FontSize="14"
                         Margin="0,0,0,8"/>
                <TextBox x:Name="GroupNameTextBox"
                       Style="{StaticResource ModernTextBox}"
                       Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}"
                       MaxLength="40"/>
                
                <!-- Character count indicator -->
                <TextBlock HorizontalAlignment="Right" 
                         Margin="0,4,0,0"
                         FontSize="11"
                         Foreground="{DynamicResource TextSecondaryColor}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}/40 characters">
                            <Binding Path="GroupName.Length" FallbackValue="0"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="2" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Center"
                      Margin="0,32,0,0">
                <Button Content="Cancel" 
                      Style="{StaticResource SecondaryButton}"
                      Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                      CommandParameter="False"
                      Margin="0,0,16,0"/>
                
                <Button Content="{Binding ActionButtonText}" 
                      Style="{StaticResource PrimaryButton}"
                      Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                      CommandParameter="True"
                      IsEnabled="{Binding CanSave}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>