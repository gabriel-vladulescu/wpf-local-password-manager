<UserControl x:Class="AccountManager.Views.Dialogs.ConfirmationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="400" MaxWidth="500" MaxHeight="500"
            Background="{DynamicResource CardBackgroundColor}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="{Binding IconBackgroundColor}" 
                        Width="48" Height="48" 
                        CornerRadius="24">
                        <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                               Foreground="White"
                                               Width="28" Height="28"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="{Binding Title}" 
                        FontSize="20" 
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        HorizontalAlignment="Center"
                        Margin="0,12,0,0"/>

                <TextBlock Text="{Binding Subtitle}" 
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondaryColor}"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                <!-- Warning Message -->
                <TextBlock Text="{Binding WarningMessage}" 
                        FontSize="14"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Margin="0,0,0,20"
                        Visibility="{Binding WarningMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Input Field -->
                <StackPanel Margin="0,0,0,16"
                           Visibility="{Binding RequiresInput, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding InputLabel}" 
                             Foreground="{DynamicResource TextPrimaryColor}" 
                             FontWeight="SemiBold"
                             FontSize="14"
                             Margin="0,0,0,8"/>
                    
                    <!-- Regular TextBox for non-password input -->
                    <TextBox Style="{StaticResource ModernTextBox}"
                           Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                           materialDesign:HintAssist.Hint="{Binding InputHint}"
                           Visibility="{Binding IsPasswordInput, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    
                    <!-- PasswordBox for password input -->
                    <PasswordBox materialDesign:HintAssist.Hint="{Binding InputHint}"
                               materialDesign:PasswordBoxAssist.Password="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                               Visibility="{Binding IsPasswordInput, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Background="{DynamicResource InputBackgroundColor}"
                               Foreground="{DynamicResource TextPrimaryColor}"
                               BorderBrush="{DynamicResource BorderColor}"
                               BorderThickness="1"
                               Padding="12,8"
                               FontSize="13"
                               Height="36">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                            Margin="{TemplateBinding Padding}"
                                                            VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                    
                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                             Foreground="{StaticResource DangerColor}"
                             FontSize="12"
                             Margin="0,4,0,0"
                             Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Changes Summary (for edit confirmation) -->
                <Border Background="{DynamicResource InputBackgroundColor}"
                       CornerRadius="8"
                       Padding="16,12"
                       Margin="0,0,0,16"
                       Visibility="{Binding ShowChangesSummary, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Changes to be saved:" 
                                 Foreground="{DynamicResource TextPrimaryColor}"
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        
                        <ItemsControl ItemsSource="{Binding ChangesList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                             Foreground="{DynamicResource TextSecondaryColor}"
                                             FontSize="13"
                                             Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center"
                Margin="0,20,0,0">
                <Button Content="{Binding CancelButtonText}" 
                      Style="{StaticResource SecondaryButton}"
                      Command="{Binding CancelCommand}"
                      Margin="0,0,16,0"/>
                
                <Button Content="{Binding ConfirmButtonText}" 
                      Command="{Binding ConfirmCommand}"
                      IsEnabled="{Binding CanConfirm}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDestructive}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource DangerColor}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>