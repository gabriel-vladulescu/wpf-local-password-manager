<UserControl x:Class="AccountManager.Views.Dialogs.ConfirmationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="400" MaxWidth="500"
            Background="{DynamicResource CardBackgroundColor}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Width="48" Height="48" 
                            CornerRadius="24">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding IconColor}"/>
                        </Border.Background>
                        <materialDesign:PackIcon Kind="{Binding Icon}" 
                                            Foreground="White"
                                            Width="24" Height="24"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="{Binding Title}" 
                        FontSize="20" 
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        HorizontalAlignment="Center"
                        Margin="0,12,0,0"/>
            </StackPanel>

            <!-- Message -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         MaxHeight="200"
                         Margin="0,0,0,20">
                <TextBlock Text="{Binding Message}" 
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryColor}"
                         HorizontalAlignment="Center"
                         TextAlignment="Center"
                         TextWrapping="Wrap"/>
            </ScrollViewer>

            <!-- Input Section (if required) -->
            <StackPanel Grid.Row="2" 
                       Margin="0,0,0,20"
                       Visibility="{Binding ShowInput, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       materialDesign:HintAssist.Hint="{Binding InputHint}"
                       FontSize="14"
                       Margin="0,8"/>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
                <Button Content="{Binding CancelText}" 
                      Style="{StaticResource SecondaryButton}"
                      Command="{Binding CancelCommand}"
                      Margin="0,0,16,0"
                      MinWidth="100"/>
                <Button Content="{Binding ConfirmText}" 
                      Command="{Binding ConfirmCommand}"
                      IsEnabled="{Binding CanConfirm}"
                      MinWidth="100">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IconColor}" Value="#EF4444">
                                    <Setter Property="Background" Value="#EF4444"/>
                                    <Setter Property="BorderBrush" Value="#EF4444"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IconColor}" Value="#F59E0B">
                                    <Setter Property="Background" Value="#F59E0B"/>
                                    <Setter Property="BorderBrush" Value="#F59E0B"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>