<UserControl x:Class="AccountManager.Views.Dialogs.AccountDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="400" MaxWidth="400" MaxHeight="600"
            Background="{DynamicResource CardBackgroundColor}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="#6366F1" 
                        Width="48" Height="48" 
                        CornerRadius="24">
                        <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                               Foreground="White"
                                               Width="28" Height="28"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="{Binding Title}" 
                        FontSize="20" 
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextPrimaryColor}"
                        HorizontalAlignment="Center"
                        Margin="0,12,0,0"/>

                <TextBlock Text="{Binding Subtitle}" 
                        FontSize="14"
                        Foreground="{DynamicResource TextSecondaryColor}"
                        HorizontalAlignment="Center"
                        Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="300" Margin="0,20,0,0"
                          Style="{StaticResource ModernScrollViewer}">
                <StackPanel>
                    <!-- Account Name -->
                    <StackPanel Margin="0,0,10,24">
                        <TextBlock Text="Account Name *" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox x:Name="AccountNameTextBox"
                               Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Name, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Username -->
                    <StackPanel Margin="0,0,10,24">
                        <TextBlock Text="Username" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Username, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,10,24">
                        <TextBlock Text="Email Address" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Margin="0,0,10,24">
                        <TextBlock Text="Password" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                   Style="{StaticResource ModernTextBox}"
                                   Text="{Binding Account.Password, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <Button Grid.Column="1" 
                                  Command="{Binding GeneratePasswordCommand}"
                                  Margin="12,0,0,0"
                                  Width="35" Height="35"
                                  Background="#6366F1"
                                  BorderThickness="0"
                                  ToolTip="Generate Secure Password">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="12">
                                            <materialDesign:PackIcon Kind="KeyVariant" 
                                                                   Foreground="White"
                                                                   Width="16" Height="16"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8486fdff"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel Margin="0,0,10,24">
                        <TextBlock Text="Notes" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Notes, UpdateSourceTrigger=PropertyChanged}"
                               AcceptsReturn="True"
                               TextWrapping="Wrap"
                               Height="100"
                               VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Actions -->
            <StackPanel Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center"
                Margin="0,20,0,0">
                <Button Content="Cancel" 
                      Style="{StaticResource SecondaryButton}"
                      Margin="0,0,16,0"/>
                
                <Button Content="{Binding ActionButtonText}" 
                      Style="{StaticResource PrimaryButton}"
                      IsEnabled="{Binding CanSave}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>