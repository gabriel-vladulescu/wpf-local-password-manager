<UserControl x:Class="AccountManager.Views.Dialogs.AccountDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border Style="{StaticResource GlassPanel}" 
            MinWidth="500" MaxWidth="600"
            Background="{DynamicResource CardBackgroundColor}">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="#6366F1" 
                           Width="56" Height="56" 
                           CornerRadius="28">
                        <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                               Foreground="White"
                                               Width="28" Height="28"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="{Binding Title}" 
                         FontSize="28" 
                         FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryColor}"
                         HorizontalAlignment="Center"
                         Margin="0,16,0,0"/>
                
                <TextBlock Text="{Binding Subtitle}" 
                         FontSize="16"
                         Foreground="{DynamicResource TextSecondaryColor}"
                         HorizontalAlignment="Center"
                         Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                <StackPanel>
                    <!-- Account Name -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Account Name *" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox x:Name="AccountNameTextBox"
                               Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Name, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Username -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Username" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Username, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Email Address" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Password" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                   Style="{StaticResource ModernTextBox}"
                                   Text="{Binding Account.Password, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <Button Grid.Column="1" 
                                  Command="{Binding GeneratePasswordCommand}"
                                  Margin="12,0,0,0"
                                  Width="52" Height="52"
                                  Background="#10B981"
                                  BorderThickness="0"
                                  ToolTip="Generate Secure Password">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="12">
                                            <materialDesign:PackIcon Kind="KeyVariant" 
                                                                   Foreground="White"
                                                                   Width="24" Height="24"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#059669"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel>
                        <TextBlock Text="Notes" 
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                               Text="{Binding Account.Notes, UpdateSourceTrigger=PropertyChanged}"
                               AcceptsReturn="True"
                               TextWrapping="Wrap"
                               Height="100"
                               VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Actions -->
            <StackPanel Grid.Row="2" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Center"
                      Margin="0,32,0,0">
                <Button Content="Cancel" 
                      Style="{StaticResource SecondaryButton}"
                      Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                      CommandParameter="False"
                      Margin="0,0,16,0"/>
                
                <Button Content="{Binding ActionButtonText}" 
                      Style="{StaticResource PrimaryButton}"
                      Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                      CommandParameter="True"
                      IsEnabled="{Binding CanSave}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>