<UserControl x:Class="AccountManager.Views.Window.Content.AccountGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <!-- Enhanced Grid Layout for Accounts -->
    <ScrollViewer Margin="24,0,24,24" 
                  VerticalScrollBarVisibility="Auto"
                  Style="{StaticResource ModernScrollViewer}">
        <ItemsControl ItemsSource="{Binding DisplayedAccounts}"
                      ItemTemplate="{StaticResource AccountCardTemplate}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" 
                               ItemWidth="250"
                               ItemHeight="Auto"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>

</UserControl>