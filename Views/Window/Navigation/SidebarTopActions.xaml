<UserControl x:Class="AccountManager.Views.Window.Navigation.SidebarTopActions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="272" Height="36">

    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="UserControl">
                        <Border x:Name="CardBorder"
                                CornerRadius="8"
                                Background="Transparent"
                                Padding="10">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick"
                                              Command="{Binding AddGroupCommand}"/>
                            </Border.InputBindings>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Left text -->
                                <TextBlock x:Name="CardText"
                                           Text="Vaults"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontWeight="Regular"
                                           Foreground="#bdbdff"/>

                                <!-- Right icon -->
                                <materialDesign:PackIcon x:Name="CardIcon"
                                                        Grid.Column="1"
                                                        Kind="Plus" 
                                                        Foreground="#bdbdff"
                                                        Width="20" Height="20"
                                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#23232e"/>
                                <Setter TargetName="CardIcon" Property="Foreground" Value="#c5c5ff"/>
                                <Setter TargetName="CardText" Property="Foreground" Value="#c5c5ff"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Style>

</UserControl>
