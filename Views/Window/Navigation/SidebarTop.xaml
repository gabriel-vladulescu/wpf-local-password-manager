<UserControl x:Class="AccountManager.Views.Window.Navigation.SidebarTop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="60"
             d:DesignWidth="300">

    <UserControl.Resources>
        <!-- Logo Style -->
        <Style x:Key="LogoImageStyle" TargetType="Image">
            <Setter Property="Width" Value="29"/>
            <Setter Property="Height" Value="29"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Source" Value="pack://application:,,,/Assets/logo-light.png"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ThemeService.IsDarkMode}" Value="True">
                    <Setter Property="Source" Value="pack://application:,,,/Assets/logo-dark.png"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Margin="20,24,20,20"
            Background="Transparent"
            CornerRadius="16"
            Padding="16,14">
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">

            <!-- Enhanced Logo Container -->
            <Border Width="40" Height="40"
                    CornerRadius="14"
                    VerticalAlignment="Center"
                    Background="{DynamicResource PrimaryColor}">
                <Border.Effect>
                    <DropShadowEffect Color="#8B5CF6" 
                                     Opacity="0.4" 
                                     ShadowDepth="2" 
                                     BlurRadius="8"/>
                </Border.Effect>
                <Image Style="{StaticResource LogoImageStyle}"
                       Width="24" Height="24"/>
            </Border>

            <!-- Modern App Title & Version -->
            <StackPanel VerticalAlignment="Center" Margin="14,0,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource AppTitle}"
                               Foreground="{DynamicResource SidebarTextPrimaryColor}"
                               FontSize="19" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               LineHeight="22"/>

                    <!-- Enhanced Version Badge -->
                    <Border Background="{DynamicResource PrimaryColor}"
                            CornerRadius="10"
                            Padding="8,3"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Opacity="0.9">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                             Opacity="0.15" 
                                             ShadowDepth="1" 
                                             BlurRadius="4"/>
                        </Border.Effect>
                        <TextBlock Text="{DynamicResource AppVersion}"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
                
                <!-- Subtitle for modern feel -->
                <TextBlock Text="Password Manager"
                           Foreground="{DynamicResource SidebarTextSecondaryColor}"
                           FontSize="12"
                           FontWeight="Normal"
                           Margin="0,2,0,0"
                           Opacity="0.7"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>